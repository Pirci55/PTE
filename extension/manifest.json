{
  "name": "PTE pro",
  "version": "6.9",
  "description": "Версия для самых маленьких",
  "manifest_version": 2,
  "icons": {
    "1024": "./favicon.png"
  },
  "browser_action": {
    "default_icon": {
      "1024": "./favicon.png"
    }
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "content_scripts": [
    {
      "matches": [
        "https://pony.town/*",
        "https://ru.wikipedia.org/*"
      ],
      "js": [
        "./code.js"
      ],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "cookie",
    "scripting",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "tabs"
  ]
}